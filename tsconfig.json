{
    "compilerOptions": {
        "sourceMap": true,
        "target":"ES2018",
        "module":"commonjs",
        "lib":["es2018", "ESNext.AsyncIterable"],
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "outDir": "./build",
        "baseUrl": "./src",
        "removeComments": true,
        "incremental": true,
        "esModuleInterop": true
    },
    "include":[
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}